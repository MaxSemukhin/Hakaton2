@page "/NewWork"
@layout RukLayout 

@using Hakaton.Entityes
@using Hakaton.Services;

@inject DBService workService
@inject NavigationManager NavigationManager
<link href="/css/profile.css" rel="stylesheet" type="text/css">

<PageTitle>Новая работа</PageTitle>
<h2>Добавить работу</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Название</label>
                <input form="Name" class="form-control" @bind=@obj.Name />
            </div>
            <div class="form-group">
                <label for="Deskr" class="control-label">Описание</label>
                <input form="Deskr" class="form-control" @bind=@obj.Description />
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save"/>
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel"/>
            </div>
        </div>
    </div>
</form>

@code {
    Work obj = new Work();
    protected async void CreateEmployee()
    {
        await workService.InsertWork(obj);
        NavigationManager.NavigateTo("Rukproekta");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Rukproekta");
    }
}

