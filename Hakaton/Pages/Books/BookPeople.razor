@using Hakaton.Services

@page "/BookPeople"
@layout RukLayout 
@inject DBService DB;
@inject NavigationManager NM;

<link href="/css/profile.css" rel="stylesheet" type="text/css">

<PageTitle>Выбор профиля для презентации</PageTitle>


        <link href="/css/menu.css" rel="stylesheet" type="text/css">

        <div class="container">
            @if(peoples is null)
            {
                <p><em>Загрузка списка специалистов... !</em></p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>ФИО</th>
                            <th>Возраст</th>
                            <th>Специальность</th>
                            <th>Рейтинг</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach(People item in peoples)
                            {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Age</td>
                            <td>@item.Spetial</td>
                            <td>@item.Rating</td>

                            @*<td>
                                <a class="nav-link" href="EditEmployee/@emp.Id">
                                    <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                                </a>
                                <a class="nav-link" href="Delete/@emp.Id">
                                    <span class="oi oi-trash" aria-hidden="true">Delete</span>
                                </a>
                            </td>*@
                        </tr>
                            }
                    </tbody>
                </table>
            }

        <button class="btn btn-primary"  @onclick="AddWork">Добавить специалиста</button>      
                

        </div>

@code
{

    List<People> peoples;
    bool LoadData = true;

    protected override async Task OnInitializedAsync()
    {
        peoples = DB.DataBase.Peoples;
        LoadData = false;
    }

    private void AddWork()
    {
        NM.NavigateTo("/NewWork");


        StateHasChanged();
    }
}
